<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88888888"
    tools:context=".MainActivity" >

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="#00000000" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cardkey" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cardkey_on"
            android:visibility="invisible" />

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_lock"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_x="74dp"
                android:layout_y="16dp"
                android:background="@null" />

            <Button
                android:id="@+id/button_unlock"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_x="14dp"
                android:layout_y="82dp"
                android:background="@null" />

            <Button
                android:id="@+id/button_rightdoor"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_x="196dp"
                android:layout_y="23dp"
                android:background="@null" />

            <Button
                android:id="@+id/button_leftdoor"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_x="135dp"
                android:layout_y="88dp"
                android:background="@null" />
        </AbsoluteLayout>
    </FrameLayout>

</RelativeLayout>